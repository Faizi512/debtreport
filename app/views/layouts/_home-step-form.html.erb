                        <option value="" selected="true" disabled="disabled">Employment Status</option>
                        <option value="Full Time Employment">Full Time Employment</option>
                        <option value="Part Time Employment">Part Time Employment</option>
                        <option value="Temporary Employment">Temporary Employment</option>
                        <option value="Self Employed">Self Employed</option>
                        <option value="Unemployed">Unemployed</option>
                        <option value="Pension">Pension</option>
                        <option value="Disability Benefits">Disability Benefits</option>
                        <option value="Student">Student</option>
                      </select>
                    </div>
                  </div>
                  <input type="button" name="previous" class="previous action-button-previous" value="Previous" data-previous="debt-number-field" data-current="employment-status-field"/>
                  <input type="button"
                    data-parsley-group="block-2"
                    name="next"
                    class="next action-button"
                    value="Next"
                    data-current="employment-status-field"
                    data-next="residential-status-field"/>
                </fieldset>
                <!--  -->
                <fieldset class="residential-status-field">
                  <div class="row justify-content-center mt-4">
                    <div class="form-group col-12">
                      <h6 class="d-flex justify-content-start py-2">What is your residential status?</h6>
                      <div class="">
                        <div class="position-relative">
                          <select
                            class="form-control residential-status h-60"
                            id="residential-status"
                            name="residential-status"
                            required=""
                            data-parsley-required="true"
                            data-parsley-required-message="Please Select Your Residential Status"
                            data-parsley-group="block-3"
                            >
                            <option value="" selected="true" disabled="disabled">Residential Status</option>
                            <option value="Tenant">Tenant</option>
                            <option value="Council Tenant">Council Tenant</option>
                            <option value="Owner">Owner</option>
                            <option value="Living with Parents">Living with Parents</option>
                            <option value="Other">Other</option>
